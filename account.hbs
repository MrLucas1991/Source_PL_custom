{{!< default}}

<main class="gh-main gh-outer">
  <style>
    @media (min-width: 768px) {
      .gh-account-header {
        margin-left: 25%;
      }
    }

    .gh-account-box {
      padding: 2rem;
      border: 1px solid #eaeaea;
      border-radius: 8px;
      background: transparent;
      margin-bottom: 2rem;
    }

    .gh-account-table {
      width: 100%;
      margin-top: 1rem;
    }

    .gh-account-input {
      width: 100%;
      margin-bottom: 1rem;
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    .gh-edit-form {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.6s ease;
    }

    .gh-edit-form.active {
      max-height: 600px;
    }

    .gh-button-outline {
      background: transparent;
      border: 2px solid #000;
      color: #000;
    }

    .gh-feedback {
      margin-top: 1rem;
      font-size: 0.95rem;
    }

    .gh-avatar-img {
      height: 80px;
      border-radius: 8px;
    }

    .gh-delete-button {
      margin-top: 2rem;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      border: 2px solid red;
      background: red;
      color: #fff;
      cursor: pointer;
      transition: all 0.3s ease;
    }
  </style>

  <header class="gh-article-header gh-account-header">
    <h1 class="gh-article-title is-title">Moje konto</h1>
    <p class="gh-article-excerpt is-body">ZarzƒÖdzaj swoimi danymi i subskrypcjƒÖ.</p>
  </header>

  <section class="gh-content gh-canvas is-body">
    {{#if @member}}
    <div class="gh-account-box">
      <h2>Dane konta</h2>
      <table class="gh-account-table">
        <tr><th>Imiƒô</th><td>{{@member.name}}</td></tr>
        <tr><th>Email</th><td>{{@member.email}}</td></tr>
        <tr><th>Avatar</th>
          <td><img class="gh-avatar-img" src="{{#if @member.avatar}}{{@member.avatar}}{{else}}https://www.gravatar.com/avatar/{{@member.email}}?d=mp&s=100{{/if}}" alt="Avatar"></td>
        </tr>
        <tr><th>Status subskrypcji</th>
          <td>{{#if @member.paid}}<strong>Aktywna</strong>{{else}}Brak aktywnej subskrypcji{{/if}}</td>
        </tr>
      </table>

      <div style="text-align:center; margin: 2rem 0;">
        <button id="toggle-edit" class="gh-button gh-button-outline">Edytuj dane</button>
      </div>

      <div class="gh-edit-form" id="edit-form-wrapper">
        <form id="profile-update-form">
          <label for="name">Imiƒô</label>
          <input type="text" id="name" name="name" class="gh-account-input" value="{{@member.name}}" placeholder="Imiƒô">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="gh-account-input" value="{{@member.email}}" placeholder="Tw√≥j e-mail">
          <label for="avatar">URL avatara</label>
          <input type="url" id="avatar" name="avatar" class="gh-account-input" value="{{@member.avatar}}" placeholder="https://...">
          <button type="submit" class="gh-button">Zapisz zmiany</button>
          <p id="update-feedback" class="gh-feedback"></p>
        </form>
      </div>

      {{#if @member.subscriptions}}
        <hr style="margin: 2rem 0;">
        <h3>Subskrypcja</h3>
        {{#foreach @member.subscriptions}}
          <table class="gh-account-table">
            <tr><th>Plan</th><td>{{price plan}} / {{plan.interval}}</td></tr>
            <tr><th>Status</th><td>{{status}}</td></tr>
            <tr><th>Start</th><td>{{date start_date format="DD MMM YYYY"}}</td></tr>
            <tr><th>Karta</th><td>**** **** **** {{default_payment_card_last4}}</td></tr>
            <tr><th>{{#if cancel_at_period_end}}Wygasa{{else}}Nastƒôpna p≈Çatno≈õƒá{{/if}}</th><td>{{date current_period_end format="DD MMM YYYY"}}</td></tr>
          </table>
          <div style="margin-top: 1rem;">
            <a href="javascript:" data-members-cancel>üîí Anuluj subskrypcjƒô</a>
          </div>
        {{/foreach}}
      {{else}}
        <p>Brak aktywnej subskrypcji.</p>
      {{/if}}

      <hr style="margin: 2rem 0;">
      <button class="gh-button gh-button-secondary" data-members-signout>Wyloguj siƒô</button>

      <p style="margin-top: 1rem;">Masz problem? <a href="/kontakt/">Skontaktuj siƒô z nami</a>.</p>
    </div>
    {{else}}
      <p>Nie jeste≈õ zalogowany. <a href="/login/">Zaloguj siƒô</a> lub <a href="/signup/">Zarejestruj siƒô</a>.</p>
    {{/if}}
  </section>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const editToggle = document.getElementById("toggle-edit");
      const formWrapper = document.getElementById("edit-form-wrapper");
      const form = document.getElementById("profile-update-form");
      const feedback = document.getElementById("update-feedback");

      if (editToggle && formWrapper) {
        editToggle.addEventListener("click", () => {
          formWrapper.classList.toggle("active");
        });
      }

      if (form) {
        form.addEventListener("submit", async (e) => {
          e.preventDefault();
          const name = document.getElementById("name").value.trim();
          const avatar = document.getElementById("avatar").value.trim();
          const email = document.getElementById("email").value.trim();

          try {
            // wysy≈Çka do n8n
            await fetch("https://n8n.votum.network/webhook-test/d3655125-6c9a-4353-87b5-f78001bc0414", {
              method: "POST",
              headers: {
                "Content-Type": "application/json"
              },
              body: JSON.stringify({ name, avatar, email })
            });

            feedback.textContent = "‚úÖ Zaktualizowano dane.";
          } catch (err) {
            feedback.textContent = "‚ùå B≈ÇƒÖd aktualizacji.";
            console.error(err);
          }
        });
      }
    });
  </script>
</main>
