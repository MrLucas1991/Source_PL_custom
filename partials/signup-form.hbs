<form class="gh-signup-form" data-members-form>

    <div class="gh-signup-group">
        <input class="gh-signup-input" id="{{email_field_id}}" name="email" type="email" placeholder="Wpisz swój e-mail" required data-members-email>
    </div>

<button class="gh-button" type="submit" aria-label="Subskrybuj">
        <span><span>Subskrybuj</span> {{> "icons/arrow"}}</span>
        {{> "icons/loader"}}
        {{> "icons/checkmark"}}
    </button>

    <p data-members-error></p>
    <p data-members-success>Sprawdź swoją skrzynkę e-mail.</p>
</form>
