{{!< default}}

<main class="gh-main">
    <article class="gh-article gh-canvas">
        <header class="gh-article-header">
            <h1 class="gh-article-title is-title">Zaloguj się</h1>
            <p class="gh-article-excerpt is-body">Wprowadź swoje dane, aby uzyskać dostęp do konta.</p>
        </header>

        <section class="gh-content gh-canvas is-body">
            <form class="gh-form gh-login-form" data-members-form>
                <div class="gh-form-group">
                    <label for="login-email" class="gh-form-label">E-mail</label>
                    <input class="gh-form-input" id="login-email" name="email" type="email" placeholder="Wpisz swój e-mail" required data-members-email>
                </div>

                <button class="gh-button gh-login-button" type="submit" aria-label="Zaloguj się">
                    <span><span>Zaloguj się</span> {{> "icons/arrow"}}</span>
                    {{> "icons/loader"}}
                    {{> "icons/checkmark"}}
                </button>

                <p class="gh-form-message" data-members-error></p>
                <p class="gh-form-message" data-members-success>Sprawdź swoją skrzynkę e-mail.</p>
            </form>

            <p class="gh-helper-text">
                Nie masz konta? <a href="{{@site.url}}/signup/">Zarejestruj się</a>.
            </p>
        </section>
    </article>
</main>
