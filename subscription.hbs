<main class="gh-main gh-outer">
  <style>
    .gh-subscription-wrapper {
      max-width: 900px;
      margin: 4rem auto 2rem;
    }

    .gh-subscription-title {
      text-align: center;
      font-size: 2.4rem;
      font-weight: 600;
      margin-bottom: 2.5rem;
    }

    .gh-subscription-plans {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: center;
      margin-bottom: 3rem;
    }

    .gh-plan-card {
      flex: 1 1 300px;
      border: 1px solid #eaeaea;
      border-radius: 10px;
      padding: 2rem;
      background: transparent;
      text-align: center;
      transition: all 0.3s ease;
    }

    .gh-plan-card:hover {
      box-shadow: 0 4px 10px rgba(0,0,0,0.06);
    }

    .gh-plan-card h3 {
      font-size: 1.6rem;
      margin-bottom: 0.5rem;
    }

    .gh-plan-price {
      font-size: 1.4rem;
      margin-bottom: 1.2rem;
      color: var(--ghost-accent-color, #000);
    }

    .gh-plan-benefits {
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }

    .gh-plan-button {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      background: var(--ghost-accent-color, #000);
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }

    .gh-subscription-form {
      max-width: 700px;
      margin: 0 auto 4rem;
      background: transparent;
      border: 1px solid #eaeaea;
      padding: 2rem;
      border-radius: 8px;
    }

    .gh-subscription-form label {
      display: block;
      margin: 1rem 0 0.25rem;
    }

    .gh-subscription-form input,
    .gh-subscription-form select {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .gh-subscription-form button {
      margin-top: 1.5rem;
      width: 100%;
      background: var(--ghost-accent-color, #000);
      color: #fff;
      padding: 0.75rem;
      border: none;
      font-size: 1rem;
      cursor: pointer;
      border-radius: 4px;
    }

    .gh-subscription-form .form-message {
      margin-top: 1rem;
      font-size: 0.95rem;
    }

    @media (max-width: 768px) {
      .gh-subscription-form,
      .gh-subscription-wrapper {
        padding: 1rem;
      }

      .gh-subscription-title {
        font-size: 2rem;
      }
    }
  </style>

