{{!< default}}

<main class="gh-main gh-outer">
  <style>
    .subscription-form {
      max-width: 600px;
      margin: 0 auto;
      background: transparent;
      border: 1px solid #eaeaea;
      padding: 2rem;
      border-radius: 8px;
    }

    .subscription-form label {
      display: block;
      margin: 1rem 0 0.25rem;
    }

    .subscription-form input,
    .subscription-form select {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .subscription-form button {
      margin-top: 1.5rem;
      width: 100%;
      background: var(--ghost-accent-color, #000);
      color: #fff;
      padding: 0.75rem;
      border: none;
      font-size: 1rem;
      cursor: pointer;
      border-radius: 4px;
    }

    .subscription-form .form-message {
      margin-top: 1rem;
      font-size: 0.95rem;
    }

    @media (max-width: 768px) {
      .subscription-form {
        padding: 1rem;
      }
    }

    .gh-subscription-title {
      text-align: center;
      margin-bottom: 2rem;
    }
  </style>

  <section class="gh-content gh-canvas is-body">
    <h1 class="gh-subscription-title">Wybierz swój plan</h1>

    <form id="custom-subscription-form" class="subscription-form">
      <label for="signup-name">Imię</label>
      <input type="text" id="signup-name" name="name" placeholder="Twoje imię" required>

      <label for="signup-email">E-mail</label>
      <input type="email" id="signup-email" name="email" placeholder="adres@email.com" required>

      <label for="signup-plan">Wybierz plan</label>
      <select id="signup-plan" name="plan" required>
        <option value="">-- Wybierz plan --</option>
        <option value="monthly">Miesięczny</option>
        <option value="yearly">Roczny</option>
      </select>

      <button type="submit">Zasubskrybuj</button>
      <div id="form-message" class="form-message"></div>
    </form>

    {{> "faq-subscription"}}
  </section>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.getElementById("custom-subscription-form");
      const messageBox = document.getElementById("form-message");

      form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const name = document.getElementById("signup-name").value;
        const email = document.getElementById("signup-email").value;
        const plan = document.getElementById("signup-plan").value;

        if (!plan) {
          messageBox.textContent = "⚠️ Wybierz plan subskrypcji.";
          return;
        }

        try {
          await ghost.members.api.signup({
            name: name,
            email: email,
            plan: plan
          });
          messageBox.textContent = "✅ Sprawdź swoją skrzynkę e-mail, aby potwierdzić subskrypcję.";
          form.reset();
        } catch (err) {
          messageBox.textContent = "❌ Wystąpił błąd. Spróbuj ponownie.";
        }
      });
    });
  </script>
</main>
