{{!< default}}

<main class="gh-main gh-outer">
  <style>
    .gh-subscription-wrapper {
      max-width: 900px;
      margin: 4rem auto 2rem;
    }

    .gh-subscription-title {
      text-align: center;
      font-size: 2.4rem;
      font-weight: 600;
      margin-bottom: 2.5rem;
    }

    .gh-subscription-plans {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: center;
      margin-bottom: 3rem;
    }

    .gh-plan-card {
      flex: 1 1 300px;
      border: 2px solid #eaeaea;
      border-radius: 10px;
      padding: 2rem;
      background: transparent;
      text-align: center;
      transition: all 0.3s ease;
    }

    .gh-plan-card.active {
      border-color: var(--ghost-accent-color, #000);
      background: #f8f8f8;
    }

    .gh-plan-card h3 {
      font-size: 1.6rem;
      margin-bottom: 0.5rem;
    }

    .gh-plan-price {
      font-size: 1.4rem;
      margin-bottom: 1.2rem;
      color: var(--ghost-accent-color, #000);
    }

    .gh-plan-benefits {
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }

    .gh-plan-button {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      background: var(--ghost-accent-color, #000);
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }

    .gh-subscription-form {
      max-width: 700px;
      margin: 0 auto 4rem;
      background: transparent;
      border: 1px solid #eaeaea;
      padding: 2rem;
      border-radius: 8px;
    }

    .gh-subscription-form label {
      display: block;
      margin: 1rem 0 0.25rem;
    }

    .gh-subscription-form input {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .gh-subscription-form button {
      margin-top: 1.5rem;
      width: 100%;
      background: var(--ghost-accent-color, #000);
      color: #fff;
      padding: 0.75rem;
      border: none;
      font-size: 1rem;
      cursor: pointer;
      border-radius: 4px;
    }

    .form-message {
      margin-top: 1rem;
      font-size: 0.95rem;
      color: #c00;
    }

    @media (max-width: 768px) {
      .gh-subscription-form,
      .gh-subscription-wrapper {
        padding: 1rem;
      }

      .gh-subscription-title {
        font-size: 2rem;
      }
    }
  </style>

  <section class="gh-subscription-wrapper">
    <h1 class="gh-subscription-title">Wybierz swój plan</h1>

    <div class="gh-subscription-plans">
      <div class="gh-plan-card" data-plan="monthly">
        <h3>Plan miesięczny</h3>
        <div class="gh-plan-price" id="plan-monthly-price">…</div>
        <ul class="gh-plan-benefits">
          <li>Dostęp do wszystkich artykułów</li>
          <li>Wsparcie niezależnego dziennikarstwa</li>
          <li>Miesięczna subskrypcja</li>
        </ul>
        <button type="button" class="gh-plan-button" data-select="monthly">Wybierz plan</button>
      </div>

      <div class="gh-plan-card" data-plan="yearly">
        <h3>Plan roczny</h3>
        <div class="gh-plan-price" id="plan-yearly-price">…</div>
        <ul class="gh-plan-benefits">
          <li>Wszystko z planu miesięcznego</li>
          <li>2 miesiące gratis (płatność roczna)</li>
          <li>Dedykowany kontakt i konsultacje</li>
        </ul>
        <button type="button" class="gh-plan-button" data-select="yearly">Wybierz plan</button>
      </div>
    </div>

    <form id="custom-subscription-form" class="gh-subscription-form">
      <label for="signup-name">Imię</label>
      <input type="text" id="signup-name" name="name" placeholder="Twoje imię" required>

      <label for="signup-email">E-mail</label>
      <input type="email" id="signup-email" name="email" placeholder="adres@email.com" required>

      <input type="hidden" id="signup-plan" name="plan" value="">

      <button type="submit">Zasubskrybuj</button>
      <div id="form-message" class="form-message"></div>
    </form>

    {{> "faq-subscription"}}
  </section>

  <script>
    document.addEventListener("DOMContentLoaded", async function () {
      const form = document.getElementById("custom-subscription-form");
      const messageBox = document.getElementById("form-message");
      const planInput = document.getElementById("signup-plan");
      const planCards = document.querySelectorAll(".gh-plan-card");
      const planButtons = document.querySelectorAll("[data-select]");

      // Obsługa wyboru planu
      planButtons.forEach(button => {
        button.addEventListener("click", () => {
          const plan = button.getAttribute("data-select");
          planInput.value = plan;

          // zaznacz aktywną kartę
          planCards.forEach(card => {
            card.classList.toggle("active", card.getAttribute("data-plan") === plan);
          });

          form.scrollIntoView({ behavior: "smooth" });
        });
      });

      // Wysłanie formularza
      form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const name = document.getElementById("signup-name").value;
        const email = document.getElementById("signup-email").value;
        const plan = planInput.value;

        if (!plan) {
          messageBox.textContent = "⚠️ Wybierz plan subskrypcji powyżej.";
          return;
        }

        try {
          await ghost.members.api.signup({ name, email });

          ghost.portal.open({ page: "signup", plan: plan });

          messageBox.textContent = "✅ Sprawdź swoją skrzynkę e-mail, aby dokończyć proces.";
          form.reset();
          planInput.value = "";
          planCards.forEach(c => c.classList.remove("active"));
        } catch (err) {
          messageBox.textContent = "❌ Wystąpił błąd. Spróbuj ponownie.";
        }
      });

      // Pobierz dane planów z Ghost
      try {
        const response = await fetch("/members/api/site/");
        const data = await response.json();
        const product = data.products.find(p => p.type === "paid");

        if (product) {
          const monthly = product.monthly_price;
          const yearly = product.yearly_price;
          const currency = product.currency.toUpperCase();

          document.getElementById("plan-monthly-price").textContent = `${(monthly / 100).toFixed(2)} ${currency} / miesiąc`;
          document.getElementById("plan-yearly-price").textContent = `${(yearly / 100).toFixed(2)} ${currency} / rok`;
        }
      } catch (err) {
        console.error("Nie udało się pobrać danych planów z Ghost.");
      }
    });
  </script>
</main>
