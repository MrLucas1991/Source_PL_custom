{{!< default}}

<main class="gh-main">
  <style>
    .gh-subscription-wrapper {
      max-width: 1080px;
      margin: 4rem auto 2rem;
      padding: 0 2rem;
      text-align: center;
    }

    .gh-subscription-title {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .gh-subscription-subtitle {
      font-size: 1.5rem;
      font-weight: 400;
      margin-bottom: 3rem;
      color: #333;
    }

    .gh-subscription-plans {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: center;
      margin-bottom: 4rem;
    }

    .gh-plan-card {
      flex: 1 1 320px;
      background: transparent;
      border: 2px solid var(--ghost-accent-color, #aa6666);
      border-radius: 12px;
      padding: 2.5rem;
      transition: all 0.3s ease;
      text-align: left;
    }

    .gh-plan-card:hover {
      box-shadow: 0 6px 14px rgba(0, 0, 0, 0.08);
      transform: translateY(-3px);
    }

    .gh-plan-card h3 {
      font-size: 2.4rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      text-align: center;
    }

    .gh-plan-price {
      font-size: 2.1rem;
      margin: 0.5rem 0 1.2rem;
      text-align: center;
      color: var(--ghost-accent-color, #000);
    }

    .gh-plan-benefits {
      list-style: disc;
      padding-left: 1.9rem;
      font-size: 1.7rem;
      margin-bottom: 2rem;
    }

    .gh-plan-button {
      display: block;
      width: 100%;
      padding: 1rem 1.5rem;
      font-size: 1.2rem;
      background: var(--ghost-accent-color, #aa6666);
      color: #fff;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      text-align: center;
      transition: background 0.2s ease;
    }

    .gh-plan-button:hover {
      background: #994a4a;
    }

    @media (max-width: 768px) {
      .gh-subscription-title {
        font-size: 2.3rem;
      }

      .gh-plan-card {
        padding: 2rem;
      }

      .gh-plan-benefits {
        font-size: 1.4rem;
      }

      .gh-plan-button {
        font-size: 1.5rem;
      }
    }
  </style>

  <section class="gh-subscription-wrapper">
    <h1 class="gh-subscription-title">Wybierz swój plan</h1>
    <p class="gh-subscription-subtitle">Zacznij wspierać niezależne dziennikarstwo i zyskaj dostęp do wszystkich treści.</p>

    <div class="gh-subscription-plans">
      <div class="gh-plan-card">
        <h3>Plan miesięczny</h3>
        <div class="gh-plan-price">$3 / miesiąc</div>
        <ul class="gh-plan-benefits">
          <li>Dostęp do płatnych artykułów</li>
          <li>Artykuły archiwalne</li>
          <li>Treści przedpremierowe</li>
          <li>Brak reklam</li>
          <li>Wspierasz prawdziwie niezależne, bezpartyjne dziennikarstwo (praca redakcyjna, analizy, wywiady, relacje)</li>
        </ul>
        {{#if @member}}
    <a href="javascript:" data-portal="signup/67bfbd5c0cd27d00017fdceb/monthly" class="gh-plan-button">Wybierz plan</a>
{{else}}
    <a href="/signup" class="gh-plan-button">Wybierz plan</a>
{{/if}}
      </div>

      <div class="gh-plan-card">
        <h3>Plan roczny</h3>
        <div class="gh-plan-price">$18 / rok</div>
        <ul class="gh-plan-benefits">
          <li>50% zniżki</li>
           <li>Wszystko z planu miesięcznego</li>
          <li>Brak reklam</li>
           <li>Wybrane treści premium Votum</li>
          <li>Wspierasz prawdziwie niezależne, bezpartyjne dziennikarstwo (praca redakcyjna, analizy, wywiady, relacje)</li>
        </ul>
        {{#if @member}}
    <a href="javascript:" data-portal="signup/67bfbd5c0cd27d00017fdceb/yearly" class="gh-plan-button">Wybierz plan</a>
{{else}}
    <a href="/signup" class="gh-plan-button">Wybierz plan</a>
{{/if}}

      </div>
    </div>

    {{> "faq-subscription"}}
  </section>
</main>
