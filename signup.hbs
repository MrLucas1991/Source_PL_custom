{{! signup.hbs - Strona rejestracji }}
{{> header}}

<section class="membership-container">
  <h1>Rejestracja</h1>
  <form id="signup-form" action="#" method="post" data-ghost-membership class="membership-form">
    <input type="email" name="email" placeholder="Email" required>
    <input type="password" name="password" placeholder="Hasło" required>
    <button type="submit">Zarejestruj się</button>
  </form>
  <p class="membership-link">
    Masz już konto? <a href="/signin">Zaloguj się</a>
  </p>
</section>

{{> footer}}
